---
import "~/styles/global.css";
import { ClientRouter } from "astro:transitions";
import Header from "~/components/Header.astro";
import Footer from "~/components/Footer.astro";
import { siteName, siteLang, themeColor } from "~/data/config";

const baseUrl = `${Astro.url.protocol}//${Astro.url.host}`;
const { pageTitle, title, description, noindex = false } = Astro.props;

interface Props {
	pageTitle?: string;
	title?: string;
	description?: string;
	noindex?: boolean;
}
---

<!doctype html>
<html lang={siteLang}>
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="theme-color" content={themeColor} />
		<meta name="description" content={description} />
		{noindex && <meta name="robots" content="noindex,nofollow" />}
		<link rel="author" href="humans.txt" />

		<link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="shortcut icon" href="/favicon.ico" />
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
		<meta name="apple-mobile-web-app-title" content={siteName} />
		<!-- <link rel="manifest" href="/site.webmanifest" /> -->

		<meta property="og:url" content={Astro.url} />
		<meta property="og:type" content="website" />
		<meta property="og:title" content={`${title} | ${siteName}`} />
		<meta property="og:image" content={`${baseUrl}/images/og-image.jpg`} />
		<meta property="og:description" content={description} />
		<meta property="og:site_name" content={siteName} />
		<meta property="og:locale" content={siteLang} />

		<meta name="twitter:card" content="summary" />
		<meta name="twitter:url" content={Astro.url} />
		<meta name="twitter:title" content={`${title} | ${siteName}`} />
		<meta name="twitter:description" content={description} />
		<!-- <meta name="twitter:image" content={`${baseUrl}/images/og-image.jpg`} /> -->

		<title>{pageTitle}</title>
		<ClientRouter />
	</head>
	<body>
		<Header />
		<main>
			<slot />
		</main>
		<Footer />
		
		<!-- Floating Action Buttons -->
		<div class="fixed bottom-6 right-6 z-50">
			<!-- WhatsApp Button -->
			<a
				href="https://wa.me/+56954167653?text=Hola%2C%20me%20interesa%20obtener%20más%20información%20sobre%20este%20template:%20https://concesionario.synergit.cl/"
				target="_blank"
				rel="noopener noreferrer"
				class="group flex items-center justify-center bg-green-500 hover:bg-green-600 text-white rounded-full shadow-lg transition-all duration-300 w-14 h-14 hover:w-40 overflow-hidden"
				aria-label="Contactar por WhatsApp"
			>
				<svg class="w-6 h-6 group-hover:hidden transition-all duration-300" fill="currentColor" viewBox="0 0 24 24">
					<path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"/>
				</svg>
				<span class="hidden group-hover:block font-semibold text-sm whitespace-nowrap transition-all duration-300">
					¡Lo quiero!
				</span>
			</a>
		</div>
	</body>
</html>

<script>
	document.addEventListener("astro:after-swap", () => {
		scrollTo({ top: history.state.scrollY, behavior: "instant" });
	});
</script>
